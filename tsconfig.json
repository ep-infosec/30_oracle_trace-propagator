{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es2017"
  },
  "include": ["./src/*"],
  "exclude": ["./src/__tests__/**/*"]
}
